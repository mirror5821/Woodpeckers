<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">

    <include layout="@layout/view_base_title_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/view_price"
                style="@style/LayoutDetailsH"
                android:background="@drawable/bg_detail">

                <TextView
                    style="@style/TvDetailsNotif"
                    android:text="@string/repair_price"/>

                <EditText
                    android:id="@+id/price"
                    android:inputType="number"
                    style="@style/TvDetailsValue"
                    android:background="@null"
                    android:text=""
                    android:hint="@string/input_repair_price"/>
            </LinearLayout>

            <LinearLayout
                style="@style/LayoutDetailsH"
                android:background="@drawable/bg_detail">

                <TextView
                    android:id="@+id/tv"
                    style="@style/TvDetailsNotif"
                    android:hint="@string/select_repater"
                    android:text=""
                    android:textColor="@color/tv_dark"
                    android:drawableRight="@mipmap/ic_next"/>

            </LinearLayout>



            <EditText
                android:id="@+id/et"
                style="@style/EtNotify"
                android:padding="@dimen/d16"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btn"
                style="@style/BtnBlue"
                android:text="@string/ok"
                android:layout_margin="@dimen/d8"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>