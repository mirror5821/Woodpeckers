<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">

    <include layout="@layout/view_base_title_bar"/>

    <include
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        layout="@layout/base_recyclerview"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/d48"
        android:orientation="horizontal"
        android:background="@drawable/bg_et_top_line">

        <EditText
            android:id="@+id/et"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="@string/input_replay_content"
            android:paddingLeft="@dimen/d8"/>

        <Button
            android:id="@+id/btn"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            style="@style/BtnBlueR"
            android:text="@string/submit"/>
    </LinearLayout>


</LinearLayout>