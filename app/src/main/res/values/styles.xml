<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="BtnCommon">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/btn_normal_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BtnBlue" parent="BtnCommon">
        <item name="android:background">@drawable/bg_btn_blue</item>
    </style>

    <style name="BtnBlueR" parent="BtnCommon">
        <item name="android:background">@drawable/bg_btn_blue_r</item>
    </style>

    <style name="Line1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1sp</item>
    </style>


    <style name="EtLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/et_normal_height</item>
    </style>

    <style name="SP">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/tv_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/d8</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="BtnIndex">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
    </style>

    <!--<item name="android:button">@null</item>-->

</resources>
